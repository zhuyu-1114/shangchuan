<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserMapper">
    <select id="login" resultType="user">
        select *
        from user
        where
        userName=#{userName}
        and
        passWord=#{passWord};
    </select>
    <select id="getCount" resultType="int">
        select count(1) from user;
    </select>
    <select id="getPage" parameterType="util.PageUtil" resultType="user">
        select * from user order by id LIMIT ${(pageindex-1)*pagesize},#{pagesize}
    </select>
    <select id="getUserBySexAndName" resultType="user">
        select * from user
        <where>
            <if test="sex!=null and sex!=''">
                sex = #{sex} and
            </if>
            <if test="name!=null and name!=''">
                name = #{name}
            </if>
        </where>
    </select>
    <insert id="addUser" parameterType="user">
        INSERT INTO USER(userName,PASSWORD,sex,createDate,updateDate,NAME) VALUES(#{userName},#{passWord},#{sex},#{createDate},#{updateDate},#{name});
    </insert>
    <delete id="delUser" parameterType="int">
        delete from user where id=#{id};
    </delete>
    <update id="updUser" parameterType="user">
        update user
        <set>
            <if test="userName!=null and userName!=''">
                userName = #{userName},
            </if>
            <if test="passWord!=null and passWord!=''">
                passWord = #{passWord},
            </if>
            <if test="sex!=null and sex!=0">
                sex = #{sex},
            </if>
            <if test="createDate!=0 and createDate!=null">
                createDate = #{createDate},
            </if>
            <if test="updateDate!=null">
                updateDate = #{updateDate},
            </if>
            <if test="name!=null and name!=''">
                name = #{name}
            </if>
        </set>
        <where>
            <if test="id!=0 and id!=null">
                id = #{id}
            </if>
        </where>
    </update>
    <select id="getUserById" resultType="user">
        select * from user where id=#{id};
    </select>
</mapper>